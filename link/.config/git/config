#
# .config/git/config: git-config(1) - Git configuration
#
# vim: ft=gitconfig
#

[alias]
    dump = cat-file -p
    type = cat-file -t

[color]
    diff = always
    ui   = true

[core]
    autocrlf = input
    safecrlf = true

[diff]
    mnemonicprefix = true
    tool = vimdiff

[difftool]
    prompt = false

[include]
    path = config-local

[push]
    default = upstream

[user]
	name = Steve Canny
	email = stcanny@gmail.com

[filter "media"]
	required = true
	clean  = git-media-clean %f
	smudge = git-media-smudge %f
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
