#
# .config/git/config: git-config(1) - Git configuration
#
# vim: ft=gitconfig
#

[alias]
    dump = cat-file -p
    type = cat-file -t

[color]
    diff = auto
    ui   = true

[core]
    autocrlf = input
    safecrlf = true
    editor = nvim
	pager = sed 's/\t/    /g' | less

[credential]
    helper = osxkeychain

[diff]
    mnemonicprefix = true
    tool = vimdiff

[difftool]
    prompt = false

[filter "media"]
	required = true
	clean  = git-media-clean %f
	smudge = git-media-smudge %f

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[include]
    path = config-local

[pager]
	stash = false

[push]
    default = upstream

[user]
	name = Steve Canny
	email = stcanny@gmail.com
